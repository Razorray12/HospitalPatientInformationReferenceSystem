<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_toEndOf="@id/avatar"
        android:textColor="@color/handles"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex"
        android:textSize="13sp"
        android:textColor="@color/handles"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_below="@id/patient"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/avatar" />
    <TextView
        android:id="@+id/sex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/handles"
        android:textSize="13sp"
        android:layout_below="@id/sex"
        android:layout_toEndOf="@id/sex"
        android:layout_alignTop="@id/sex"
        />
    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room"
        android:textColor="@color/handles"
        android:textSize="13sp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_below="@id/sex"
        android:layout_toEndOf="@id/sex"
        android:layout_alignTop="@id/sex"
        android:layout_marginStart="100dp"/>

    <TextView
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/handles"
        android:fontFamily="@font/open_sans_light"
        android:layout_below="@id/room"
        android:layout_toEndOf="@id/room"
        android:layout_alignTop="@id/room"/>

    <TextView
        android:id="@+id/doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/curatorDoctor"
        android:textSize="13sp"
        android:textColor="@color/handles"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_below="@id/sex"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/avatar" />

    <TextView
        android:id="@+id/doctor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/handles"
        android:fontFamily="@font/open_sans_light"
        android:layout_below="@id/doctor"
        android:layout_toEndOf="@id/doctor"
        android:layout_alignTop="@id/doctor"/>

</RelativeLayout>